section: .page-width

    a.button.button-secondary.button-back(ng-href='#/selection/{{ brand }}/{{ type }}') &laquo; Sizes

    h2.center Compatibility Table
    .box.center Results for: {{ brand }} cards, {{ type }} - {{ size }} GB.

    div.row.results-heading
        .col-2: h4.center Class
        .col-2: h4.center Model
        .col-6: h4.center Info
        .col-2: h4.center Compatible

    ul.results-list
        li.row(ng-repeat='card in results')
            .col-2.class: .inner {{ card.class || '-' }}
            .col-2.model: .inner {{ card.model || '-' }}
            .col-6.info: .inner {{ card.info || '-' }}
            .col-2.compatible: .inner(ng-class='{ success: card.compatible }') {{ card.compatible ? 'yes': 'no' }}

    p.center.credits.authors
        | Reports by: 
        span(ng-repeat='author in authors')
            {{author}}
            span(ng-if='!$last') , 